#include <iostream>
#include <string>
using namespace std;

string pass, pass_reversed, pass_consonant, pass_final = "";
int i = 0;
const string number = "1234567890";

int main()
{
    cout << "Enter encrypted password: ";
    cin >> pass;

    for (i = pass.length() - 1; i >= 0; i--)
    {
        pass_reversed += pass[i]; // Membalik urutan kata pada Password
    }

    for (char c : pass_reversed)
    {
        if (number.find(c) == string::npos)
            pass_consonant += c;
    }
    cout << "Your decrypted password is: " << pass_consonant << endl;
    cout << "Just need to add a few vowels to make it right!" << endl;
    system("pause");

    return 0;
}
