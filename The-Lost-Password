#include <iostream>
#include <string>
using namespace std;

string pass, pass_reversed, pass_consonant, pass_final = "";
int i = 0;
const string vowels = "aiueoAIUEO";

int main()
{
    cout << "Enter password: ";
    cin >> pass;

    for (i = pass.length() - 1; i >= 0; i--)
    {
        pass_reversed += pass[i]; // Membalik urutan kata pada Password
    }

    for (char c : pass_reversed)
    {
        if (vowels.find(c) == string::npos)
            pass_consonant += c;
    }
    if (!pass.empty())
    {
        char firstChar = pass[0];
        int pass_length = pass_consonant.length(), ASCIIFirst = int(firstChar);
        int pass_middle = pass_length % 2 == 0 ? pass_length / 2 : pass_length / 2 + 1;
        string pass_final = pass_consonant.substr(0, pass_middle) + to_string(ASCIIFirst) + pass_consonant.substr(pass_middle);
        cout << "Final encrypted password: " << pass_final << "\n";
    }

    system("pause");

    return 0;
}
